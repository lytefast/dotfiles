source ~/.secrets_rc

# Discord specfiic scripts
pyfmt () {
        clyde lint python-format `git status --porcelain | grep -v D | grep '.py$' | sed 's/^...//' | xargs`
}
pyfmtCommitted () {
  clyde lint python-format `git diff --name-only origin/main..HEAD | grep -v D | grep '.py$' | xargs`
}

cd ~/code/discord
