// Place your settings in this file to overwrite the default settings
{
  "editor.semanticHighlighting.enabled": true,
  "workbench.colorTheme": "One Monokai",
  "workbench.colorCustomizations": {
    "[One Monokai]": {
      "activityBar.background": "#16171b",
      "editor.background": "#1d1f26",
      "editorLineNumber.foreground": "#44587c"
    }
  },
  "workbench.iconTheme": "material-icon-theme",
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
  "files.autoSave": "off",
  "files.associations": {
    "*.mjml": "html",
    "*.css": "postcss",
    "*.styl": "postcss"
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.gradle": true,
    "**/*.class": true,
    "**/*.idea": true,
    "**/*.iml": true,
    "**/.pytest_cache": true,
    "**/*.pyc": true,
    "**/*.yarncache": true,
    "**/deps": true,
    "**/node_modules": true
  },
  "explorer.openEditors.visible": 10,
  // "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.rulers": [
    100,
    120
  ],
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  // "python.linting.flake8Enabled": true,
  // "python.linting.pycodestyleEnabled": true,
  "python.linting.pycodestyleArgs": [
    "--max-line-length=120"
  ],
  "[python]": {
    "editor.wordWrapColumn": 120
  },
  // Prettier
  "prettier.singleQuote": true,
  "prettier.jsxBracketSameLine": true,
  "prettier.printWidth": 120,
  "prettier.bracketSpacing": false,
  "prettier.trailingComma": "es5",
  "breadcrumbs.enabled": true,
  "gitlens.defaultDateFormat": "MMM DD, YYYY HH:mm",
  "editor.fontFamily": "PowerlineSymbols, Roboto Mono, DejaVu Sans Mono, monospace, 'Droid Sans Fallback'",
  "explorer.confirmDelete": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "terminal.integrated.shell.linux": "/usr/bin/zsh",
  // "terminal.integrated.shell.linux": "flatpak-spawn",
  // "terminal.integrated.shellArgs.linux": ["--host", "--env=TERM=xterm-256color", "zsh"],
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "args": ["-l"]
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "flatpak zsh": {
      "path": "flatpak-spawn",
      "args": ["--host", "--env=TERM=xterm-256color", "zsh"]
    },
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "diffEditor.ignoreTrimWhitespace": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "gitlens.defaultTimeFormat": "hh::mm",
  // == Rust ====
  "rust-analyzer.inlayHints.maxLength": 120,
  "rust-analyzer.lruCapacity": 99999,
  "rust-analyzer.rustfmt.enableRangeFormatting": true,
  "rust-analyzer.assist.importEnforceGranularity": true,
  "rust-analyzer.procMacro.ignored": {
    "async-trait": [
      "async_trait"
    ],
    "tracing-attributes": [
      "instrument"
    ]
  },
  "[rust]": {
    "editor.wordBasedSuggestions": false,
    "editor.acceptSuggestionOnCommitCharacter": true,
    // This has been fixed in newer rust-analyzer versions, so it's good to turn on now. Have not
    // tried this in TS yet, so just using it in rust for now.
    "editor.bracketPairColorization.enabled": true,
    // New feature, will show a ghost of what tab would insert inline.
    "editor.suggest.preview": true
  },
  "editor.semanticTokenColorCustomizations": {
    "[One Monokai]": {
      "enabled": true,
      "rules": {
        "unresolvedReference": {
          "foreground": "#f0b0b0", // darker: f35050, dd5c67
          "fontStyle": "bold underline",
        },
        "*.async": {
          "italic": true
        },
        "*.declaration": {
          "bold": true
        },
        "*.reference": {
          "italic": true
        },
        "*.mutable": {
          "underline": true,
        },
        "*.defaultLibrary": {
          "foreground": "#817cd1",
          "bold": true
        },
      },
    }
  },
  "editor.tokenColorCustomizations": {
    "[One Monokai]": {
      "textMateRules": [
        {
          "scope": [
            "entity.name.type.enum",
            "storage.identifier",
            "support.class"
          ],
          "settings": {
            "foreground": "#64e7ae"
          }
        },
        {
          "scope": [
            "support.type",
            "support.variable"
          ],
          "settings": {
            "foreground": "#56B6C2",
            "fontStyle": "bold"
          }
        },
        {
          "scope": [
            "entity.name.type.interface",
            "storage.identifier",
            "support.class"
          ],
          "settings": {
            "foreground": "#26d2f8",
            // "fontStyle": "italic"
          }
        },
        {
          "scope": [
            "variable.other.property",
          ],
          "settings": {
            "foreground": "#a3cae4",
          }
        }
      ]
    }
  },
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "switch:command"
  ],
  "window.zoomLevel": -1,
}